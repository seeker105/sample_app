<% provide(:title, @header) %>
<div class="row">
<%= render partial: "shared/sidebar" %>
  <div class="col-md-8">
    <h3><%= "#{@header}" %></h3><br /><br  />

    <% if @messages.any? %>
      <ol class="line-item">
        <% @messages.each do |message| %>
          <span class="user"><li><%= link_to "#{message.content.slice(0,5)}...",
                                    message_show_url(user_id: current_user.id, message_id: message.id)%></li></span>
      <% end %>
      </ol>
    <% else %>
      <h4>No <%= "#{@header}" %> Yet!</h4><br />
    <% end %>
  </div>
</div>
